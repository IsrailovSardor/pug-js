extends ../maket.pug

block content
    section#breadcrumbs
        .container 
            .breadcrumbs
                a.bread-title(href="./") Главная
                p.bread-slash /
                a.bread-title(href="./") Тренинги
                p.bread-slash /
                p.bread-descr Бизнес-тренинг «Маркетинг – технология роста»
    section#training
        .container 
            .training-title__wrapper
                img.training-cube_img(src="../../assets/img/icons/cube_one.svg", alt="")
                img.training__line-img(src="../../assets/img/icons/train-line.svg", alt="")
                p.training-title__text Бизнес-тренинг «Маркетинг – технология роста»
                p.training-title__descr Для кого: руководители компаний, маркетологи, продавцы
                p.training-title__descr Цели бизнес-тренинга:
                .training-items__blocks
                    .services-items__block
                        img.services-items__block-img(src="../../assets/img/icons/logo2.svg", alt="")
                        p.services-items__block-descr Определение маркетинга как технологии роста
                    .services-items__block
                        img.services-items__block-img(src="../../assets/img/icons/logo2.svg", alt="")
                        p.services-items__block-descr Организация маркетинга как сквозного бизнес-процесса
                    .services-items__block
                        img.services-items__block-img(src="../../assets/img/icons/logo2.svg", alt="")
                        p.services-items__block-descr Получение практических навыков применения технологии маркетинга
                    button.training__button Подробнее
                        span.training__button-span
                            svg(width='24' height='24' viewbox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg')
